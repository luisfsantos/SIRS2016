<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.meic.sirs.androidtemplate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Main">
        <activity android:name=".ui.menu.MenuListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.menu.MenuItemDetailActivity"
            android:label=""
            android:parentActivityName=".ui.menu.MenuListActivity" />
        <activity
            android:name=".ui.ViewSamplesActivity"
            android:label="Samples"
            android:parentActivityName=".ui.menu.MenuListActivity" />
        <activity
            android:name=".ui.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".ui.menu.MenuListActivity" />
    </application>

</manifest>